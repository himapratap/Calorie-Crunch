            <header>
                <h2>Join the Crunch!</h2>
                <p>To get started, please fill out the following form:</p>
            </header>
            <section class="wrapper style5">
                <div class="inner">
                    <section>
                        <h4>Form</h4>
                        <form method="post" action="/signup">
                            <div class="row uniform">
                                <div class="6u 12u$(xsmall)">
                                    <input type="text" name="name" id="demo-name" value="" placeholder="Name" />
                                </div>
                                <div class="6u$ 12u$(xsmall)">
                                    <input type="email" name="email" id="demo-email" value="" placeholder="Email" />
                                </div>
                                <div class="6u 12u$(xsmall)">
                                    <input type="password" name="password" id="demo-password" value="" placeholder="Password" />
                                </div>
                                <div class="6u$ 12u$(xsmall)">
                                    <input type="text" name="age" id="demo-age" value="" placeholder="Age" />
                                </div>
                                <div class="6u 12u$(xsmall)">
                                    <select name="gender" id="demo-category">
                                        <option value="">- Gender -</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                        <!-- <option value="1">Other</option> -->
                                        <!-- <option value="1">Human Resources</option> -->
                                    </select>
                                </div>
                                <div class="6u 12u$(xsmall)">
                                    <select name="activityLevel" id="demo-category">
                                        <option value="">- Activity Level -</option>
                                        <option value="low">Low</option>
                                        <option value="med">Med</option>
                                        <option value="high">High</option>
                                        <!-- <option value="1">Other</option> -->
                                        <!-- <option value="1">Human Resources</option> -->
                                    </select>
                                </div>
                                <div class="6u 12u$(xsmall)">
                                    <input type="text" name="weight" id="demo-name" value="" placeholder="Weight in lbs" />
                                </div>
                                <div class="6u$ 12u$(xsmall)">
                                    <input type="text" name="height" id="demo-email" value="" placeholder="Height in inches" />
                                </div>
                                <div class="12u$">
                                    <ul class="actions">
                                        <li>
                                            <input type="submit" value="Submit" class="special" />
                                        </li>
                                        <li>
                                            <input type="reset" value="Reset" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
